extends layout

block add
 div(align='center')
  label Create
  hr
  form(method='POST' action='/add')
    table.list-edit
      tr
        th PatientID
        td
          input(type="text" name="PatientID").text
      tr
        th PatientRoom
        td
          input(type="text" name="PatientRoom").text
      tr
        th PatientFirstname
        td 
          input(type="text" name="PatientFirstname").text
      tr
